# ===========================================
# Variables de Entorno - Online Biblioteca
# ===========================================
# Copia este archivo como .env y configura los valores

# JWT Secret - CAMBIAR EN PRODUCCIÓN
# Genera uno con: openssl rand -base64 32
JWT_SECRET=tu_jwt_secret_super_seguro_cambiar_e
# Tiempo de expiración del token JWT (ejemplo: 1d, 7h, 30m)
JWT_EXPIRES_IN=tiempo_de_expiracion_del_token

# URL base de la API
# Desarrollo: http://localhost:4000/api
# Producción con IP: http://TU_IP_PUBLICA:4000/api
# Producción con dominio: https://api.tudominio.com/api
VITE_URL_API=http://localhost:4000/api

# Puerto de la API backend
PORT=4000

# Ambiente de ejecución
NODE_ENV=production

# Año mínimo y máximo de publicación
VITE_ANIO_MIN=1900
VITE_ANIO_MAX=2026

# Items por página
VITE_ITEMS_PER_PAGE=4

# Cloudinary Configuration
# Obtén estas credenciales en: https://cloudinary.com/console
VITE_CLOUDINARY_CLOUD_NAME=tu_cloud_name
VITE_CLOUDINARY_UPLOAD_PRESET=tu_upload_preset
